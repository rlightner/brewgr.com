@model string

@if (!string.IsNullOrWhiteSpace(Model))
{
    if (Model.IndexOf(Environment.NewLine, StringComparison.Ordinal) > -1)
    {
        foreach (var part in Model.Split(new[] { Environment.NewLine }, StringSplitOptions.None))
        {
            @part<br />
        }
    }
    else
    {
        @Model
    }
}